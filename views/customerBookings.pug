extends includes/layoutCustomer

block content
  - let totalBookings = 0

  h2 Dine Bookings
  ul
    each booking in bookings
      if booking.customer.id === currentCustomerId
        li 
          - const dateOptions = { day: '2-digit', month: '2-digit', year: 'numeric' };
          - const formattedDate = new Date(booking.startDate * 1000).toLocaleString(undefined, dateOptions);
          - const formattedDate2 = new Date(booking.endDate * 1000).toLocaleString(undefined, dateOptions);
          p Start Dato: #{formattedDate}
          p Slut Dato: #{formattedDate2} 
          p Number of persons: #{booking.nrOfPersons}
          p Price: #{booking.bookingPrice}
          - totalBookings += 1

  p Total antal ture: #{totalBookings}