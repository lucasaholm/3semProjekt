extend includes/layout

block content
    h1 Chauffør oversigt
    table
        tr
            th #
            th Navn
            th Efternavn
            th Brugernavn 
            th Kodeord

        each driver, index in drivers
            tr
                td #{index + 1}
                td #{driver.firstName}
                td #{driver.lastName}
                td #{driver.driverUsername}
                td #{driver.driverPassword}
        tr
            td(colspan="7") Totalt antal chaufføre: #{drivers.length}


