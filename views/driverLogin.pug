html
    head 
        title BikeWithUs admin
    
        link(rel="stylesheet" href="/CSS/core.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,100&display=swap" rel="stylesheet")
    
    body 
        main 
            h2 BikeWithUs buschauffør login
            form(action='/drivers/driverLogin', method='POST')
                label(for='username') Brugernavn
                input(type='text', id='driverUsername', name='username', required)

                label(for='password') Adgangskode
                input(type='password', id='driverPassword', name='password', required)
                button(type='submit', name='action', value='Login') Login buschauffør
                
            